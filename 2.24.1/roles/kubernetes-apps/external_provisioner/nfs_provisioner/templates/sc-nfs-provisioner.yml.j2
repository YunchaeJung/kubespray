---
apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: {{ nfs_storageclass_delete_name }}
provisioner: {{ nfs_provisioner_name }}
reclaimPolicy: Delete
parameters:
  archiveOnDelete: "false"
mountOptions:
  - vers=4.1
  
---
apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: {{ nfs_storageclass_retain_name }}
provisioner: {{ nfs_provisioner_name }}
parameters:
  archiveOnDelete: "false"
reclaimPolicy: Retain
mountOptions:
  - vers=4.1
